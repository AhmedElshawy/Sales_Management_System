
<div class="container-fluid text-dark" id="element-to-print" style="background-color:white;">
    @*p-3 pt-5 pb-5*@
    <div class="row">
        <div class="col-12 d-flex justify-content-between">
            <h6 class="text-dark">Invoice To :</h6>
            <h6 class="text-dark">INV-<span id="invoice-id"></span></h6>
        </div>
    </div>
    <div class="row">
        <div class="col-12 d-flex justify-content-between">
            <p>
                <span id="customer-name"></span>
                <br />
                <span id="customer-address"></span>
                <br />
                <span id="customer-phone"></span>
            </p>
            <h6 class="text-dark">Invoice Date : <span id="invoice-date"></span></h6>
        </div>
    </div>
    <div class="row mt-5">
        <div class="table-responsive w-100">
            <table class="table table-bordered">
                <thead class="text-dark">
                    <tr>
                        <th>Description</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Unit cost</th>
                        <th class="text-center">Total</th>
                    </tr>
                </thead>
                <tbody id="items-table-body">
                  
                </tbody>
            </table>
        </div>
    </div>
    <div class="rowb mt-5">
        <div class="col-md-6 ms-auto">
            <div class="table-responsive">
                <table class="table text-dark">
                    <tbody>
                        <tr>
                            <td class="text-bold-800">Total</td>
                            <td id="total" class="text-bold-800 text-end"></td>
                        </tr>
                        <tr>
                            <td>number of items</td>
                            <td id="number-of-items" class="text-danger text-end"></td>
                        </tr>
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
        <div class="bg-secondary text-center rounded p-5 mt-5 mb-5">
            <div class="row">
                <div class="col-12 text-center">
                    <a id="btn-print" class="btn btn-outline-primary px-5">
                        Print Invoice
                    </a>
                </div>
            </div>
        </div>
</div>


