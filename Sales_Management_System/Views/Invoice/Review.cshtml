
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card bg-secondary">
                <div class="card-body text-white">
                    <div class="container-fluid d-flex justify-content-between">
                        <div class="col-lg-3 ps-0">
                            
                            <h5 class="mt-5 mb-2 text-muted">Invoice to :</h5>
                            <p>
                                <span id="customer-name">Name</span>                              
                                <br />
                                <span id="customer-address">Address</span>
                                <br />
                                <span id="customer-phone">Phone</span>
                            </p>
                        </div>                     
                    </div>
                    <div class="container-fluid mt-5 d-flex justify-content-center w-100">
                        <div class="table-responsive w-100">
                            <table class="table table-bordered text-white">
                                <thead class="text-primary">
                                    <tr>
                                        <th>Description</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Unit cost</th>
                                        <th class="text-center">Total</th>
                                    </tr>
                                </thead>
                                <tbody id="items-table-body">
                                    <tr class="text-center">
                                        <td class="text-start">{{item.productName}}</td>
                                        <td>{{item.quantity}}</td>
                                        <td>{{item.price | currency}}</td>
                                        <td>{{this.order?.total}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="container-fluid mt-5 w-100">
                        <div class="row">
                            <div class="col-md-6 ms-auto">
                                <div class="table-responsive">
                                    <table class="table text-white">
                                        <tbody>
                                            <tr>
                                                <td>number of items</td>
                                                <td id="number-of-items" class="text-danger text-end"></td>
                                            </tr>                                                                                   
                                            <tr>
                                                <td class="text-bold-800">Total</td>
                                                <td id="total" class="text-bold-800 text-end"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-secondary text-center rounded p-5 mt-5 mb-5">
    <div class="row">
        <div class="col-12 text-center">
            <a id="btn-review" class="btn btn-outline-primary px-5">
                Confirm Invoice
            </a>
        </div>
    </div>
</div>

</div>




@section Scripts{
    <script src="~/assets/js/InvoiceReviewPage.js" asp-append-version="true"></script>
}