

<div class="container bg-secondary rounded h-100 p-4">
        <div class="row">                   
            <div class="bg-secondary text-center rounded p-4" style="min-height:250px;">
                <div class="row d-flex align-items-center justify-content-between mb-4">
                    <div class="col-6">
                    <h6>Select the product and quantity to increase inventory OR <a asp-action="Create" asp-controller="Product">Add New Product</a></h6>
                    </div>
                   
                    <div class="col-3">
                        <form class="d-none d-md-flex ms-4">
                            <input id="search-box" class="form-control bg-dark border-0 text-white" type="search" placeholder="Search">
                        </form>
                    </div>                                 
                </div>  
                
                <div class="table-responsive">
                    <table class="table text-start align-middle table-bordered table-hover mb-0">
                        <thead>
                            <tr class="text-primary">
                                <th scope="col"></th>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Available Quantity</th>
                                <th scope="col">Quantity to add</th>
                            </tr>
                        </thead>
                        <tbody id="table-body" class="text-white">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>        
        <div class="row mt-3">
            <div class="col-12">
                <input type="button" id="increase-quantity-btn" value="Add" class="btn btn-outline-primary px-5" />
            </div>
        </div>
</div>

@section Scripts{
    <script src="~/assets/js/ProductIncreaseQuantityPage.js" asp-append-version="true"></script>
}