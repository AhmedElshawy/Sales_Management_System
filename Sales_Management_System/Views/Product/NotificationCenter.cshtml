@model List<Core.Models.Product>;


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                @if(Model.Count() != 0){
                <h5 class="mb-5">All Notifications</h5>   
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>                          
                            <th scope="col">Quantity</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>                               
                                <td>@item.Quantity</td>
                                @{
                                    if(item.Quantity == 0)
                                    {
                                        <td><span class="text-danger">Out Of Stock</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="text-warning">Nearly Out Of Stock</span></td>                                        
                                    }
                                }
                            </tr>
                        }
                    </tbody>
                    </table>
                }
                else
                {
                    <h3 class="text-center text-primary">There are no notifications to show right now</h3>
                }
            </div>
        </div>
    </div>
</div>
