@model Core.Models.Brand;

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-8">
            <div class="bg-secondary rounded h-100 p-4">
                <form asp-action="Create">
                    <h6 class="mb-4">Enter the reqired data</h6>
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" id="floatingInput"
                               placeholder="Brand Name">
                        <label for="floatingInput">Brand Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>                  
                    <div class="col-12 mt-3">
                        <input type="submit" value="Add" class="btn btn-outline-primary px-5" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
